        },

        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SignUpResponse"
                  },
                  "title": "Response Get Regions Regions  Get"
                }
              }
            }
          },

          "400": {
